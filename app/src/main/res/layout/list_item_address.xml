<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/trans"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address1"
            android:textColor="@color/black"
            android:layout_weight="0.5"/>

<!--        <TextView-->
<!--            android:id="@+id/address_type"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:text="@string/address1"-->
<!--            android:textColor="@color/black" />-->

        <RadioButton
            android:id="@+id/sel_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cusAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/address1"
            android:textColor="@color/txt_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cusAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cusAddress1"
            android:layout_marginTop="10dp"
            android:text="@string/address1"
            android:textColor="@color/txt_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cusAddress2"
            android:layout_marginTop="10dp"
            android:text="@string/address1"
            android:textColor="@color/txt_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pinCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cusAddress2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/cityName"
            android:text="@string/address1"
            android:textColor="@color/txt_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mobNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pinCode"
            android:layout_marginTop="10dp"
            android:text="@string/address1"
            android:textColor="@color/txt_grey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobNum"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/grey_bg_btn"
                android:gravity="center"
                android:text="@string/address1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/grey_bg_btn"
                android:gravity="center"
                android:text="@string/address1" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>